<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matthewtole.linkfix"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".LinkFixActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.Panel" >
            <intent-filter>
                <data
                    android:host="t.co"
                    android:scheme="http" />
                <data
                    android:host="youtu.be"
                    android:scheme="http" />
                <data
                    android:host="www.plusya.com"
                    android:scheme="http" />
                <data
                    android:host="bit.ly"
                    android:scheme="http" />
                <data
                    android:host="dft.ba"
                    android:scheme="http" />
                <data
                    android:host="tinyurl.com"
                    android:scheme="http" />
                <data
                    android:host="tmblr.co"
                    android:scheme="http" />
                <data
                    android:host="fb.me"
                    android:scheme="http" />
                <data
                    android:host="is.gd"
                    android:scheme="http" />

                <action android:name="android.intent.action.VIEW" />
                <action android:name="com.matthewtole.linkfix.LINK" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
            <intent-filter>
                <data
                    android:host="instagr.am"
                    android:scheme="http" />
                <data
                    android:host="ow.ly"
                    android:scheme="http" />

                <action android:name="com.matthewtole.linkfix.PHOTO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>